<div id="navigation">
  <h2 class="left">
    <% if current_project.image_token? %>
      <%= image_tag download_image_path(token: current_project.image_token, size: "medium") %>
    <% end %>
    <%= link_to current_project.name, project_path %>
  </h2>
  <a class="ntf-lamp left" href="<%= project_path %>"><%= image_tag('icon/heart_off.png') %></a>
  <ul class="boxes right">
    <li class="left<%= ' current' if path == 'canvas' %>">
      <%= link_to t('navi.canvas'), project_canvas_path %>
    </li>
    <li class="left<%= ' current' if path == 'milestones' %>">
      <%= link_to t('navi.milestones'), project_milestones_path %>
    </li>
    <li class="left<%= ' current' if path == 'tasks' %>">
      <%= link_to t('navi.tasks'), project_tasks_path %>
    </li>
    <li class="left">
      <select id="project-management-menu">
        <option value=""><%= t 'navi.management' %></option>
        <option value="<%= project_members_path %>"><%= t 'navi.members' %></option>
        <option value="<%= edit_project_path %>"><%= t 'navi.edit' %></option>
      </select>
    </li>
  </ul>
</div>
